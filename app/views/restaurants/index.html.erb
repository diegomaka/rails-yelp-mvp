<h1 class="my-4">Restaurants</h1>

<p class="mt-2">
  <%= link_to 'New Restaurant', new_restaurant_path, class: 'btn btn-primary' %>
</p>

<div class="container">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Cuisine</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><strong><%= restaurant.name %></strong></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.category.capitalize %></td>
          <td><%= link_to 'Info', restaurant, class: 'btn btn-secondary' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


